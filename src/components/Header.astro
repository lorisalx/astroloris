---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../config';
---

<header>
	<nav>
		<h1>
			{SITE_TITLE}
		</h1>
		<div >
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="https://github.com/lorisalx" target="_blank">GitHub</HeaderLink>
		</div>
	</nav>
</header>
<style>
	header {
		background-color: #2E5266;
		margin: auto;
	}
	h1 {
		font-family: 'Fredoka One';
		font-weight: normal;
		margin: 1em;
	}
	nav {
		align-items: center;
		display: flex;
		justify-content: space-evenly;
	}
	div {
		align-items: center;
		display: flex;
		justify-content: space-evenly;
	}
</style>
